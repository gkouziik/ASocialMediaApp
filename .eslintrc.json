{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb",
    "prettier",
    "plugin:node/recommended"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "no-console": "warn",
    "curly": "warn",
    "dot-location": "warn",
    "no-empty-function": "error",
    "no-multi-spaces": "error",
    "no-empty-pattern": "error",
    "no-lone-blocks": "error",
    "no-underscore-dangle": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "node/no-unsupported-features/es-syntax": "off",
    "node/no-unpublished-require": "warn"
  }
}
